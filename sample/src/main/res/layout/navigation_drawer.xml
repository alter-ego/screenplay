<?xml version="1.0" encoding="utf-8"?>

<com.davidstemmer.screenplay.sample.view.NavigationDrawerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_drawer"
    android:orientation="vertical"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:dividerPadding="2dp"
    android:showDividers="middle|end"
    android:divider="@android:drawable/divider_horizontal_textfield">
    <TextView
        android:id="@+id/nav_item_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome scene"
        style="@style/NavigationDrawerItem"/>
    <TextView
        android:id="@+id/nav_item_paged_scenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paged scenes"
        style="@style/NavigationDrawerItem"/>
    <TextView
        android:id="@+id/nav_item_multipane_scenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multipane scenes"
        style="@style/NavigationDrawerItem"/>
</com.davidstemmer.screenplay.sample.view.NavigationDrawerView>